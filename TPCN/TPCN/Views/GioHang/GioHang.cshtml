@using TPCN.Models;
@model List<GioHang>
@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="table-responsive cart_info">
    <table class="table table-condensed">
        @if (ViewBag.GioHang != "Giỏ Hàng Rỗng!!")
        {
        <thead>
            <tr class="cart_menu">
                <td class="image" width="50px">Hình ảnh</td>
                <td>Tên</td>
                <td class="price">Giá</td>
                <td class="quantity">Số lượng</td>
                <td class="total">Tổng tiền</td>
                <td></td>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                using (Html.BeginForm("CapNhatGioHang", "GioHang", new { iMASP = item.iMASP }))
                {
                    <tr>
                        <td>
                            <img src="~/HinhSP/@item.sHINHANH" alt="" style="width:100px;height:100px;">
                        </td>
                        <td style="line-height:100px;">
                            @item.sTENSP
                        </td>
                        <td style="line-height:100px;">
                            <p>@String.Format("{0:0,0}", item.dDONGIA) VNĐ</p>
                        </td>
                        <td style="line-height:100px;">
                            <div>
                                <input type="number" value="@item.iSOLUONG" name="txtSOLUONG" style="width:40px;border-radius:10px;height:30px;" />
                            </div>
                        </td>
                        <td style="line-height:100px;">
                            <p class="cart_total_price">@String.Format("{0:0,0}", item.dTHANHTIEN) VNĐ</p>
                        </td>
                        <td>

                            <input type="submit" value="Cập nhật" style="height:30px;width:100px;color:#fff;background-color:#FA1818;float:left;border:none;margin-top:20%;" />

                        </td>
                        <td style="line-height:100px;">
                            <a class="cart_quantity_delete" style="color:#FA1818" href="@Url.Action("XoaGioHang", "GioHang", new { iMaSP = item.iMASP })"><i class="fa fa-times"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>

        }
    </table>
    <div style="width:100%;height:500px;">
        <p style="color:#FA1818;font-size:30px;font-weight:bold;margin-top:20px;text-align:center;">@ViewBag.GioHang</p>
    </div>
</div>
<div class="clearfix"></div>





