@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<TPCN.Models.SANPHAM>
@helper RutGon(string input, int length)
{
if (input.Length < length)
{
        @input
}
else
{
        @input.Substring(0, length)<text>...</text>
}
}
@{
    ViewBag.Title = "Tất Cả Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Tạo mới", "Create")
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().HINHANH)</th>
                                <th>@Html.DisplayNameFor(model => model.First().TENSP)</th>
                                <th>@Html.DisplayNameFor(model => model.First().MOTA)</th>
                                <th>@Html.DisplayNameFor(model => model.First().DONGIA)</th>
                                <th>@Html.DisplayNameFor(model => model.First().KHUYENMAI)</th>
                                <th>@Html.DisplayNameFor(model => model.First().LOAISP.TENLOAI)</th>
                                <th>@Html.DisplayNameFor(model => model.First().NGAYCAPNHAT)</th>
                                <th>@Html.DisplayNameFor(model => model.First().THANHTOANTRUCTUYEN)</th>
                                <th>@Html.DisplayNameFor(model => model.First().URL)</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        <img src="~/HinhSP/@Html.DisplayFor(modelItem => item.HINHANH)" class="img-responsive" width="100" height="100" title="@item.TENSP"/>
                                    </td>
                                    <td>
                                        @RutGon(item.TENSP,50)
                                    </td>
                                    <td>
                                        @Html.Raw(RutGon(item.MOTA, 20))
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DONGIA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.KHUYENMAI)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LOAISP.TENLOAI)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NGAYCAPNHAT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.THANHTOANTRUCTUYEN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.URL)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MASP }) |
                                        @Html.ActionLink("Hiển Thị", "Details", new { id = item.MASP }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MASP })
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
<!--Tạo link liên kết các trang-->
<div style="text-align:center;">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", "SANPHAMs", new { page = page }))
    </div>
</div>

<!-- /#page-wrapper -->
