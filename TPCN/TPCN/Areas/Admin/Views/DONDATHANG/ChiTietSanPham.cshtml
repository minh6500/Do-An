@model IEnumerable<TPCN.Models.CTDDH>
@{
    ViewBag.Title = "Chi Tiết Sản Phẩm";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Chi Tiết Sản Phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().SANPHAM.HINHANH)</th>
                            <th>@Html.DisplayNameFor(model => model.First().SANPHAM.TENSP)</th>
                            <th>@Html.DisplayNameFor(model => model.First().SANPHAM.MOTA)</th>
                            <th>@Html.DisplayNameFor(model => model.First().SANPHAM.DONGIA)</th>
                            <th>@Html.DisplayNameFor(model => model.First().SOLUONG)</th>
                            <th>@Html.DisplayNameFor(model => model.First().DONGIA)</th>
                            <th>@Html.DisplayNameFor(model => model.First().SANPHAM.LOAISP.TENLOAI)</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    <img src="~/HinhSP/@Html.DisplayFor(modelItem => item.SANPHAM.HINHANH)" class="img-responsive" width="100" height="100" title="@item.SANPHAM.TENSP" />
                                </td>
                                <td>
                                    <div class="truncate">@Html.DisplayFor(modelItem => item.SANPHAM.TENSP)</div>
                                </td>
                                <td>
                                    <div class="truncate">@Html.Raw(item.SANPHAM.MOTA)</div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SANPHAM.DONGIA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SOLUONG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DONGIA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SANPHAM.LOAISP.TENLOAI)
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<!-- /#page-wrapper -->
