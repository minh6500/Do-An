@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<TPCN.Models.DONDATHANG>

@{
    ViewBag.Title = "Đơn Đặt Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().NGAYDAT)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().KHACHHANG.TENKH)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().TENDAIDIEN)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().SDT)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().DIACHIGIAO)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().TINHTRANGTHANHTOAN)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().TINHTRANGGIAOHANG)
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAYDAT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KHACHHANG.TENKH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TENDAIDIEN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DIACHIGIAO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TINHTRANGTHANHTOAN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TINHTRANGGIAOHANG)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MAD }) |
                                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.MAD }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.MAD })
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<!--Tạo link liên kết các trang-->
<div style="text-align:center;">
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", "DONDATHANG", new { page = page }))
    </div>
</div>

<!-- /#page-wrapper -->
