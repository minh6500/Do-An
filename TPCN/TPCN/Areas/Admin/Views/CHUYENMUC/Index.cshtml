@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<TPCN.Models.CHUYENMUC>

@{
    ViewBag.Title = "Chuyên Mục Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Tạo mới", "Create")
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().TENCM)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().URLCM)
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TENCM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.URLCM)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MACM })
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<!--Tạo link liên kết các trang-->
<div style="text-align:center;">
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", "CHUYENMUC", new { page = page }))
    </div>
</div>

<!-- /#page-wrapper -->
